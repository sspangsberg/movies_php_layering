DROP DATABASE IF EXISTS MovieOnlyDB; 
CREATE DATABASE MovieOnlyDB; 
USE MovieOnlyDB;

CREATE TABLE Movie 
(
    MovieID int AUTO_INCREMENT NOT NULL PRIMARY KEY,
    Title varchar(100),
    Year int,
    `Length` int,
    Genre varchar(255),
    Director varchar(255),
    Description varchar(255),
    imgUrl varchar(255)
);


